<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>
            {{ title }}
            |
            {{ site.name }}
        </title>
        <meta name="author" content="{{ site.author }}">
        <meta name="description" content="{{ site.description }}">
        <link rel="icon" href="{{ site.favicon }}" type="image/svg+xml"/>
        <link rel="stylesheet" type="text/css" href="/css/style.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Maven+Pro">
    </head>

    <body class="wlua-body">
        {% include "partials/nav.html" %}
        {% if image %}
            <div class="top-img-cont"><img class="top-img" src="{{ image }}" alt="Washington Lacrosse Umpires Association"/></div>
        {% endif %}
        <main class="wlua-main">
            {{ content | safe }}
        </main>

        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script src="/js/main.js"></script>

        {% include "partials/footer.html" %}
    </body>

</html>